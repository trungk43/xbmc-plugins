       version="1.0"
       provider-name="HDrepo">
	<requires>
		<import addon="xbmc.python" version="2.1.0" />
	</requires>
	<extension point="xbmc.service"
			library="default.py" start="startup">
	</extension>	
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <language>en</language>
		<summary lang="en">HDPlay Autostart</summary>
		<description lang="en">Cho phép chạy addon HDPlay khi khởi động XBMC</description>
    </extension>
</addon>
</addons>
